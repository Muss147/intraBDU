<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script type="module" src="{{ asset('assets/js/carousel-agent.js') }}"></script>
<script>
    window.flashMessages = {
        {% for type, messages in app.flashes %}
            {{ type }}: {{ messages|json_encode|raw }},
        {% endfor %}
    };

    document.addEventListener('DOMContentLoaded', () => {
        const showToast = (message, type = 'success', duration = 9000) => {
            const container = document.getElementById('toast-container');

            const colors = {
                success: 'bg-green-600 text-white',
                error: 'bg-red-600 text-white',
                info: 'bg-blue-600 text-white',
                warning: 'bg-yellow-500 text-black'
            };

            const toast = document.createElement('div');
            toast.className = `
                flex items-center p-4 rounded-lg shadow-lg
                ${colors[type] || colors.success}
                transition-opacity duration-500
            `;

            toast.innerHTML = `
                <div class="text-sm font-medium">${message}</div>
                <button class="ml-4 text-white hover:text-gray-200 focus:outline-none">
                    ‚úï
                </button>
            `;

            container.appendChild(toast);

            // fermeture manuelle
            toast.querySelector('button').addEventListener('click', () => {
                toast.remove();
            });

            // auto-destroy
            setTimeout(() => {
                toast.classList.add('opacity-0');
                setTimeout(() => toast.remove(), 500);
            }, duration);
        };

        /* ==========================
        * 2. FLASH SUCCESS ‚Üí TOAST
        * ========================== */
        if (window.flashMessages?.success?.length) {
            showToast(flashMessages.success[0], 'success');
        }

        const form = document.getElementById('vote-form');
        const errorBox = document.getElementById('matricule-error');
        const submitBtn = document.getElementById('vote-submit');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            errorBox.classList.add('hidden');
            submitBtn.disabled = true;

            const formData = new FormData(form);

            try {
                const response = await fetch("{{ path('project_vote_check') }}", {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                const data = await response.json();

                if (!data.success) {
                    errorBox.textContent = data.message;
                    errorBox.classList.remove('hidden');
                    submitBtn.disabled = false;
                    return;
                }

                // ‚úÖ OK ‚Üí soumission r√©elle
                form.submit();

            } catch (error) {
                errorBox.textContent = "Une erreur est survenue. Veuillez r√©essayer.";
                errorBox.classList.remove('hidden');
                submitBtn.disabled = false;
            }
        });

        const projectInput = document.getElementById('vote_project_id');
        const carousel = document.getElementById('indicators-carousel');

        const updateProjectIdFromActiveSlide = () => {
            const activeSlide = carousel.querySelector('[data-carousel-item].translate-x-0');

            if (!activeSlide) {
                console.warn('Aucun slide visible');
                return;
            }

            const projectId = activeSlide.dataset.projectId;

            if (!projectId) {
                console.warn('data-project-id manquant');
                return;
            }

            projectInput.value = projectId;
            console.log('Projet actif ‚Üí', projectId);
        };

        // Initialisation (important)
        updateProjectIdFromActiveSlide();

        /* ==========================
        * FLOWBITE ‚Üí OBSERVE LES CLASSES
        * ========================== */
        const observer = new MutationObserver(() => {
            updateProjectIdFromActiveSlide();
        });

        observer.observe(carousel, {
            subtree: true,
            attributes: true,
            attributeFilter: ['class']
        });
        
        var carouselSwiper = new Swiper('.carouselSwiper', {
            loop: true,
            autoplay: {
                delay: 4000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
        var voteSwiper = new Swiper(".voteSwiper", {
            effect: "coverflow",
            initialSlide: 1,
            loop: true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: "auto",
            coverflowEffect: {
                rotate: 50,
                stretch: 0,
                depth: 100,
                modifier: 1,
                slideShadows: true,
            },
        });
        var annivSwiper = new Swiper('#annivSwiper', {
            loop: true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: true,
            },
            slidesPerView: 1,
            breakpoints: {
                980: {
                    slidesPerView: 2,
                },
            },
        });
        var swiperAkwaba = new Swiper('#swiperAkwaba', {
            slidesPerView: 3,
            loop: true,
            autoplay: {
                delay: 6000,
                disableOnInteraction: false,
            },
        });
    });
</script>
