<script>
    function oneMoreViewed(event, docId, el) {
        event.preventDefault(); // emp√™che le lien de s'ouvrir directement

        const url = el.getAttribute('href'); // destination finale

        fetch(`/documents-de-reference/procedures/${docId}/increment-view`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id: docId })
        })
        .then(response => response.json()) // on parse la r√©ponse JSON
        .then(data => {
            console.log('R√©ponse AJAX:', data); // üëà ici tu as ton console.log
            // tu peux aussi afficher data.views si tu veux
        })
        .catch(err => console.error('Erreur AJAX:', err))
        .finally(() => {
            // Une fois la requ√™te partie (r√©ussie ou non), on redirige vers le doc
            window.open(url, '_blank');
        });

        return false; // bloque la navigation par d√©faut
    }
    document.addEventListener('DOMContentLoaded', function () {
    });
</script>
