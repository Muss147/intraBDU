{% extends 'front/layout.html.twig' %}

{% block title "Annuaire BDU" %}

{% block stylesheets %}
{{ parent() }}
<style type="text/css">
select#votes_form_agent {
    display: none;
}
.range-input {
  -webkit-appearance: none;
  appearance: none;
  width: 100%;
  background: transparent;
  position: relative;
  z-index: 10;
}

/* Track */
.range-input::-webkit-slider-runnable-track {
  height: 1rem;
  background: #e5e7eb; /* Tailwind bg-gray-200 */
  border-radius: 0.25rem;
}
.range-input::-moz-range-track {
  height: 1rem;
  background: #e5e7eb;
  border-radius: 0.25rem;
}

/* Thumb */
.range-input::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  height: 1rem;
  width: 1rem;
  border-radius: 9999px;
  background: #6ca942; /* Tailwind yellow-400 */
  cursor: pointer;
  position: relative;
  z-index: 20;
  margin-top: -0.25rem;
}
.range-input::-moz-range-thumb {
  height: 1rem;
  width: 1rem;
  border-radius: 9999px;
  background: #6ca942;
  cursor: pointer;
  border: none;
}
</style>
{% endblock %}

{% block body %}
<div class="max-w-screen-xl mx-auto px-4 mt-6 mb-12">
    <!-- Sujets les plus consultés -->
    <section class="pb-8 min-h-screen space-y-16 md:space-y-10">
        <h2 class="text-[#2b62aa] text-xl font-semibold mb-4">Annuaire BDU</h2>

        <form class="max-w-lg mx-auto" method="get" action="{{ path('annuaire') }}">   
            <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only">Search</label>
            <div class="relative">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <input type="search" name="research" value="{{ term }}" id="default-search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary focus:border-[#2b62aa]" placeholder="Rechercher un nom, un poste, une direction, ou un numéro..." />
                <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-[#2b62aa] hover:bg-[#2b62aa] focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2">Rechercher</button>
            </div>
        </form>

        <turbo-frame id="annuaire_results">
            {% include 'front/annuaire/_agents.html.twig' %}
        </turbo-frame>

    </section>
    
    <!-- Modals -->
    <div id="agent-modal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <!-- Modal content -->
        <div class="relative w-full max-w-lg max-h-full bg-white rounded-lg shadow-sm">
            <!-- Modal body -->
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
                <div class="flex justify-end px-4 pt-4"></div>
                <div class="flex flex-col items-center pb-10">
                    <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="{{asset('assets/media/actualites/image6.png')}}" alt="Bonnie image"/>
                    <h5 class="mb-1 text-xl font-medium text-gray-900">Idrissa Welle Diallo</h5>
                    <span class="text-sm text-gray-500">Directeur Général</span>
                    
                    <div class="flex mt-4 md:mt-6 gap-2" role="tablist">
                        <button id="vote-tab"
                            type="button"
                            role="tab"
                            data-tabs-target="#vote"
                            aria-controls="vote"
                            aria-selected="false"
                            class="tab-button inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-[#2b62aa] rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                            Voter
                        </button>
                        <button id="contact-tab"
                            type="button"
                            role="tab"
                            data-tabs-target="#contact"
                            aria-controls="contact"
                            aria-selected="false"
                            class="tab-button py-2 px-4 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-[#2b62aa]">
                            Détails
                        </button>
                    </div>

                    <!-- Tabs content -->
                    <div id="default-tab-content" class="w-full">
                        <div class="hidden p-4 md:p-8" id="vote" role="tabpanel" aria-labelledby="vote-tab">
                            <hr>
                            <h2 class="text-lg font-bold text-[#2b62aa] mt-3 mb-5">Noter l'agent pour voter</h2>

                            {% include 'front/vote/_form.html.twig' with { form: form } %}
                            
                        </div>
                        <div class="hidden p-4" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            <p class="text-justify">Lorem ipsum dolor sit amet consectetur adipisicing elit. Perspiciatis hic voluptatum ratione est quos repellendus asperiores. Ratione vel, quo aliquid dolorem magnam quibusdam officiis qui placeat, perferendis quam totam nostrum.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de succès -->
    <div id="success-modal" tabindex="-1" aria-hidden="true"
        class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-md max-h-full">
            <div class="relative bg-white rounded-lg shadow">
                <div class="flex items-center justify-between p-4 border-b rounded-t">
                    <h3 class="text-lg font-semibold text-green-700">
                        Succès !
                    </h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="success-modal">
                        <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
                    </button>
                </div>
                <div class="p-6 space-y-4 text-center">
                    <svg class="mx-auto w-10 h-10 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M16.707 5.293a1 1 0 0 1 0 1.414l-7.364 7.364a1 1 0 0 1-1.414 0L3.293 9.414a1 1 0 1 1 1.414-1.414L8.5 11.793l6.793-6.793a1 1 0 0 1 1.414 0z"/>
                    </svg>
                    <p id="success-message" class="text-sm text-gray-700"></p>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    const flashMessages = {
        {% for type, messages in app.flashes %}
            {{ type }}: {{ messages|json_encode|raw }},
        {% endfor %}
    };
    document.addEventListener("DOMContentLoaded", () => {
        const modalEl = document.getElementById('agent-modal');
        if (modalEl) {
            // Crée et ajoute le backdrop
            const backdrop = document.createElement('div');
            backdrop.className = "bg-gray-900/50 fixed inset-0 z-40 hidden";
            document.body.appendChild(backdrop);

            // Initialise le modal
            const modal = new Modal(modalEl, {
                placement: 'center',
                backdrop: 'dynamic',
                onHide: () => backdrop.classList.add('hidden')
            });

            // Ouvre le modal avec le backdrop visible
            const showModal = () => {
                backdrop.classList.remove('hidden');
                modal.show();
            };

            // Si message flash d’erreur → affiche l’alerte + ouvre le modal
            if (flashMessages?.error?.length) {
                const box = document.getElementById('alert-container');
                box.innerHTML = `
                <div class="flex items-center p-4 mt-3 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50" role="alert">
                    <svg class="w-4 h-4 me-3 shrink-0" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                    </svg>
                    <div><strong>Erreur :</strong> ${flashMessages.error[0]}</div>
                </div>`;
                box.classList.remove('hidden');
                showModal();
            }
        }

        const modalEl2 = document.getElementById('success-modal');
        if (!modalEl2) return;

        const modal2 = new Modal(modalEl2, {
            backdrop: 'dynamic',
            placement: 'center'
        });

        // Si on a un flash message "success" → on ouvre le modal
        if (flashMessages?.success?.length) {
            const message = flashMessages.success[0];
            document.getElementById('success-message').textContent = message;
            modal2.show();
        }
        
        const buttons = document.querySelectorAll('.tab-button');

        document.querySelectorAll('[data-modal-toggle="agent-modal"]').forEach(button => {
            button.addEventListener('click', () => {
                const data = JSON.parse(button.dataset.agent);

                modalEl.querySelector('img').src = data.photo;
                modalEl.querySelector('h5').textContent = `${data.nom} ${data.prenoms}`;
                modalEl.querySelector('span.text-sm').textContent = data.fonction;
                modalEl.querySelector('#contact p.text-justify').textContent = "";
                
                // Pré-sélectionner le champ <select> du formulaire (agent)
                const agentSelect = modalEl.querySelector('select#votes_form_agent');
                if (agentSelect) {
                    agentSelect.value = data.id;
                    // Forcer le trigger d'un éventuel plugin JS (comme Select2)
                    agentSelect.dispatchEvent(new Event('change'));
                }

            });
        });
        
        buttons.forEach(button => {
            button.addEventListener('click', function () {
                const targetSelector = button.getAttribute('data-tabs-target');
                const targetPanel = document.querySelector(targetSelector);
                const isOpen = !targetPanel.classList.contains('hidden');

                // Fermer tous les panels et réinitialiser les boutons
                document.querySelectorAll('[role="tabpanel"]').forEach(panel => {
                    panel.classList.add('hidden');
                });

                document.querySelectorAll('.tab-button').forEach(btn => {
                    btn.setAttribute('aria-selected', 'false');
                });

                // Si le panel était fermé, on l’ouvre et on marque le bouton comme actif
                if (!isOpen) {
                    targetPanel.classList.remove('hidden');
                    button.setAttribute('aria-selected', 'true');
                }
            });
        });
    });
</script>
{% endblock %}