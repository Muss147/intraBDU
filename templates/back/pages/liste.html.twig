{% extends "back/layout.html.twig" %}

{% block title "Liste des pages" %}

{% block stylesheets %}
<link href="{{asset('assets/plugins/custom/datatables/datatables.bundle.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	<div
		class="d-flex flex-column flex-column-fluid">

		<!--begin::Toolbar-->
		<div
			id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

			<!--begin::Toolbar container-->
			<div
				id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">

				<!--begin::Page title-->
				<div
					class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
					<!--begin::Title-->
					<h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
						Liste des pages
					</h1>
					<!--end::Title-->


					<!--begin::Breadcrumb-->
					<ul
						class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							<a href="{{path('dashboard')}}" class="text-muted text-hover-primary">
								Tableau de bord
							</a>
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							Paramètres
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							Pages
						</li>
						<!--end::Item-->

					</ul>
					<!--end::Breadcrumb-->
				</div>
				<!--end::Page title-->
				<!--begin::Actions-->
				<div
					class="d-flex align-items-center gap-2 gap-lg-3">
				</div>
				<!--end::Actions-->
			</div>
			<!--end::Toolbar container-->
		</div>
		<!--end::Toolbar-->

		<!--begin::Content-->
		<div
			id="kt_app_content" class="app-content  flex-column-fluid ">


			<!--begin::Content container-->
			<div
				id="kt_app_content_container" class="app-container  container-xxl ">

				<!--begin::Card-->
				<div
					class="card card-flush ">
					<!--begin::Card header-->
					<div
						class="card-header mt-6">
						<!--begin::Card title-->
						<div
							class="card-title">
							<!--begin::Search-->
							<div class="d-flex align-items-center position-relative my-1 me-5">
								<i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
									<span class="path1"></span>
									<span class="path2"></span>
								</i>
								<input type="text" data-kt-trash-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Rechercher une page"/>
							</div>
							<!--end::Search-->
						</div>
						<!--end::Card title-->

						<!--begin::Card toolbar-->
						<div
							class="card-toolbar">
							<!--begin::Button-->
							<a href="{{path('page.new')}}" class="btn btn-light-primary">
								<i class="ki-duotone ki-plus-square fs-3">
									<span class="path1"></span>
									<span class="path2"></span>
									<span class="path3"></span>
								</i>
								Nouvelle page
							</a>
							<!--end::Button-->
						</div>
						<!--end::Card toolbar-->
					</div>
					<!--end::Card header-->

					<!--begin::Card body-->
					<div
						class="card-body pt-0">
						<!--begin::Table-->
						<table class="table align-middle table-row-dashed fs-6 gy-5 mb-0" id="kt_trash_table">
							<thead>
								<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
									<th class="min-w-300px">Pages</th>
									<th class="min-w-100px">Emplacement</th>
									<th class="min-w-100px">Statut</th>
									<th class="min-w-125px">Date</th>
									<th class="text-end min-w-100px">Actions</th>
								</tr>
							</thead>
							<tbody class="fw-semibold text-gray-600">
                                {% for page in pages %}
								<tr>
									<td>
										<a href="{{path('page.new', {id: page.id})}}" class="text-gray-800 text-hover-primary fs-5">{{ page.titre }}</a>
									</td>
									<td>{{ page.emplacement }}</td>
									<td class="max-w-28">
										{% if page.statut %}<div class="badge badge-light-success">En ligne</div>
                                        {% else %}<div class="badge badge-light-danger">Hors ligne</div>{% endif %}
									</td>
									<td>{{ page.createdAt|time_ago }}</td>
									<td class="text-end">
										<a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
											Actions
											<i class="ki-duotone ki-down fs-5 ms-1"></i>
										</a>
										<!--begin::Menu-->
										<div
											class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="{{path('page.new', {id: page.id})}}" class="menu-link px-3">
													Modifier
												</a>
											</div>
											<!--end::Menu item-->
											<!--begin::Menu item-->
											<form class="menu-item px-3" method="post" action="{{ path('page_delete', {'page': page.id}) }}">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page.id) }}">
												<a href="#" class="menu-link px-3" data-kt-users-table-filter="delete_row"
													data-kt-swal="true"
													data-kt-swal-text="Êtes-vous sûr de vouloir supprimer la page ?"
													data-kt-swal-confirm-button-text="Oui, supprimer ?"
													data-kt-swal-confirm-button="btn fw-bold btn-primary">
													Supprimer
												</a>
											</form>
											<!--end::Menu item-->
										</div>
										<!--end::Menu-->
									</td>
								</tr>
                                {% endfor %}
							</tbody>
						</table>
						<!--end::Table-->
					</div>
					<!--end::Card body-->
				</div>
				<!--end::Card-->
			</div>
			<!--end::Content container-->
		</div>
		<!--end::Content-->
	</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
<script src="{{asset('assets/js/custom/apps/pages-builder/pages/list.js')}}"></script>

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('[data-kt-swal="true"]').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault(); // Empêche la redirection immédiate

                Swal.fire({
                    text: link.dataset.ktSwalText || '',
                    icon: link.dataset.ktSwalIcon || 'warning',
                    showCancelButton: !0,
                    buttonsStyling: !1,
                    confirmButtonText: link.dataset.ktSwalConfirmButtonText || 'Oui, supprimer !',
                    cancelButtonText: link.dataset.ktSwalCancelButtonText || 'Non, annuler',
                    customClass: {
                        confirmButton: link.dataset.ktSwalConfirmButton || "btn fw-bold btn-danger",
                        cancelButton: link.dataset.ktSwalCancelButton || "btn fw-bold btn-active-light-primary",
                    },
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirige vers l'URL du lien
						link.closest('form').submit();
                        // window.location.href = link.getAttribute('href');
                    }
                });
            });
        });
    });

    {% for type, messages in app.flashes %}
        {% for message in messages %}
        Swal.fire({
            html: `{{message|raw}}`,
            icon: "{{type}}",
            buttonsStyling: false,
            confirmButtonText: "Ok, compris !",
            customClass: {
                confirmButton: "btn btn-primary"
            }
        });
        {% endfor %}
    {% endfor %}
</script>
{% endblock %}
