{% extends "back/layout.html.twig" %}

{% block title type|capitalize %}

{% block stylesheets %}
<link href="{{asset('assets/plugins/custom/datatables/datatables.bundle.css')}}" rel="stylesheet" type="text/css"/>
<style type="text/css">
.badge {
	white-space: collapse;
}
</style>
{% endblock %}

{% block body %}
	<div
		class="d-flex flex-column flex-column-fluid">

		<!--begin::Toolbar-->
		<div
			id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

			<!--begin::Toolbar container-->
			<div
				id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">

				<!--begin::Page title-->
				<div
					class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
					<!--begin::Title-->
					<h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
						liste des {{type}}
					</h1>
					<!--end::Title-->


					<!--begin::Breadcrumb-->
					<ul
						class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							<a href="{{path('dashboard')}}" class="text-muted text-hover-primary">
								Tableau de bord
							</a>
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							Paramètres
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							{{type|capitalize}}
						</li>
						<!--end::Item-->

					</ul>
					<!--end::Breadcrumb-->
				</div>
				<!--end::Page title-->
				<!--begin::Actions-->
				<div
					class="d-flex align-items-center gap-2 gap-lg-3">
				</div>
				<!--end::Actions-->
			</div>
			<!--end::Toolbar container-->
		</div>
		<!--end::Toolbar-->

		<!--begin::Content-->
		<div
			id="kt_app_content" class="app-content  flex-column-fluid ">


			<!--begin::Content container-->
			<div
				id="kt_app_content_container" class="app-container  container-xxl ">

				<!--begin::Card-->
				<div
					class="card card-flush ">
					<!--begin::Card header-->
					<div
						class="card-header mt-6">
						<!--begin::Card title-->
						<div
							class="card-title">
							<!--begin::Search-->
							<div class="d-flex align-items-center position-relative my-1 me-5">
								<i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
									<span class="path1"></span>
									<span class="path2"></span>
								</i>
								<input type="text" data-kt-params-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Rechercher un(e) {{type|slice(0, -1)}}"/>
							</div>
							<!--end::Search-->
						</div>
						<!--end::Card title-->

						<!--begin::Card toolbar-->
						<div
							class="card-toolbar">
							<!--begin::Button-->
							<button type="submit" class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_param">
								<i class="ki-duotone ki-plus-square fs-3">
									<span class="path1"></span>
									<span class="path2"></span>
									<span class="path3"></span>
								</i>
								Ajouter un(e) {{type|slice(0, -1)}}
							</button>
							<!--end::Button-->
						</div>
						<!--end::Card toolbar-->
					</div>
					<!--end::Card header-->

					<!--begin::Card body-->
					<div
						class="card-body pt-0">
						<!--begin::Table-->
						<table class="table align-middle table-row-dashed fs-6 gy-5 mb-0" id="kt_params_table">
							<thead>
								<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
									<th class="min-w-300px">{{type|capitalize}}</th>
									<th class="max-w-28">{{parent ? parent.type|capitalize : null}}</th>
									<th class="min-w-100px">Éléments</th>
									<th class="min-w-125px">Date</th>
									<th class="text-end min-w-250px">Actions</th>
								</tr>
							</thead>
							<tbody class="fw-semibold text-gray-600">
                                {% for item in parametres %}
								<tr>
									<td>
										<div data-kt-params-table-filter="product_name">
											{% if item.children|length != 0 %}
											<a href="{{path('param_type', {type: item.children|first.type, 'parent': item.id})}}" class="text-gray-800 text-hover-primary fs-5">{{ item.libelle }}</a>
											{% else %}<span class="text-gray-800 fs-5">{{ item.libelle }}</span>{% endif %}
										</div>
									</td>
									<td class="max-w-28">
										{% if parent %}
										<div class="badge badge-light-{{random(['success', 'danger', 'primary', 'info', 'warning'])}}">{{ item.parent.libelle }}</div>
										{% endif %}
									</td>
									<td class="text-center">{{ item.children|length }}</td>
									<td>{{ item.createdAt|time_ago }}</td>
									<td class="text-end">
										<a href="javascript:;" onclick="addElement({{item.id}})" class="btn btn-sm btn-light-primary btn-active-primary me-3" data-bs-toggle="modal" data-bs-target="#kt_modal_add_element">
											<i class="ki-duotone ki-plus-circle fs-3">
												<span class="path1"></span>
												<span class="path2"></span>
											</i>
											Élement
										</a>
										<a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
											Actions
											<i class="ki-duotone ki-down fs-5 ms-1"></i>
										</a>
										<!--begin::Menu-->
										<div
											class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="#" class="menu-link px-3" data-bs-toggle="modal" data-bs-target="#kt_modal_update_param" data-bs-ident="{{item.id}}">
													Modifier
												</a>
											</div>
											<!--end::Menu item-->
											<!--begin::Menu item-->
											<form class="menu-item px-3" method="post" action="{{ path('param_delete', {'param': item.id}) }}">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
												<a href="#" class="menu-link px-3" data-kt-params-table-filter="delete_row">
													Supprimer
												</a>
											</form>
											<!--end::Menu item-->
										</div>
										<!--end::Menu-->
									</td>
								</tr>
                                {% endfor %}
							</tbody>
						</table>
						<!--end::Table-->
					</div>
					<!--end::Card body-->
				</div>
				<!--end::Card-->

				<!--begin::Modals-->
				<!--begin::Modal - Add permissions-->
				<div
					class="modal fade" id="kt_modal_add_param" tabindex="-1" aria-hidden="true"> <!--begin::Modal dialog-->
					<div
						class="modal-dialog modal-dialog-centered mw-650px">
						<!--begin::Modal content-->
						<div
							class="modal-content">
							<!--begin::Modal header-->
							<div
								class="modal-header">
								<!--begin::Modal title-->
								<h2 class="fw-bold">Ajout de {{type|slice(0, -1)}}</h2>
								<!--end::Modal title-->

								<!--begin::Close-->
								<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-permissions-modal-action="close">
									<i class="ki-duotone ki-cross fs-1">
										<span class="path1"></span>
										<span class="path2"></span>
									</i>
								</div>
								<!--end::Close-->
							</div>
							<!--end::Modal header-->

							<!--begin::Modal body-->
							<div
								class="modal-body scroll-y mx-5 mx-xl-15 my-7">
								<!--begin::Form-->
                                {{form_start(new_param, {'attr': {'id': 'kt_modal_add_param_form', 'class': 'form'}})}}
									{% if parent %}
									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold required form-label mb-2">{{parent.type|capitalize}}</label>
										<!--end::Label-->

										<!--begin::Input-->
                                        {{form_widget(new_param.parent, {'attr': {'class': 'form-select form-select-solid fw-bold', 'data-control': 'select2', 'aria-label': 'Sélectionner un(e) '~ parent.type, 'data-placeholder': 'Sélectionner une()'~ parent.type ~' ...', 'data-dropdown-parent': '#kt_modal_add_param', 'data-hide-search': 'true'}})}}
										<!--end::Input-->
									</div>
									<!--end::Input group-->
									{% endif %}

									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2 required">{{type|slice(0, -1)|capitalize}}</label>
										<!--end::Label-->

										<!--begin::Input-->
                                        {{form_widget(new_param.libelle, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer un libellé'}})}}
										<!--end::Input-->
									</div>
									<!--end::Input group-->
									
									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Description</label>
										<!--end::Label-->

										<!--begin::Input-->
                                        {{form_widget(new_param.description, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer une description'}})}}
										<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Actions-->
									<div class="text-center pt-15">
										<button type="reset" class="btn btn-light me-3" data-kt-permissions-modal-action="cancel">
											Annuler
										</button>

										<button type="submit" class="btn btn-primary" data-kt-permissions-modal-action="submit">
											<span class="indicator-label">
												Soumettre
											</span>
											<span class="indicator-progress">
												Veuillez patienter...
												<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
											</span>
										</button>
									</div>
									<!--end::Actions-->

									{# CSRF token explicitement affiché #}
									{{ form_row(new_param._token) }}

								{{form_end(new_param, { render_rest: false })}}
								<!--end::Form-->
							</div>
							<!--end::Modal body-->
						</div>
						<!--end::Modal content-->
					</div>
					<!--end::Modal dialog-->
				</div>
				<!--end::Modal - Add permissions-->
				<!--begin::Modal - Update permissions-->
				<div
					class="modal fade" id="kt_modal_update_param" tabindex="-1" aria-hidden="true">
					<!--begin::Modal dialog-->
					<div
						class="modal-dialog modal-dialog-centered mw-650px">
						<!--begin::Modal content-->
						<div
							class="modal-content">
							<!--begin::Modal header-->
							<div
								class="modal-header">
								<!--begin::Modal title-->
								<h2 class="fw-bold">Modification de Permission</h2>
								<!--end::Modal title-->

								<!--begin::Close-->
								<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-permissions-modal-action="close">
									<i class="ki-duotone ki-cross fs-1">
										<span class="path1"></span>
										<span class="path2"></span>
									</i>
								</div>
								<!--end::Close-->
							</div>
							<!--end::Modal header-->

							<!--begin::Modal body-->
							<div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
								<!--begin::Form-->
								<form
									id="kt_modal_update_param_form" class="form" action="{{path('edit_permissions')}}" method="POST"> <!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">{{type|slice(0, -1)|capitalize}}</label>
										<!--end::Label-->

										<!--begin::Input-->
										<input
										class="form-control form-control-solid" placeholder="Entrer le libellé de la permission" name="param_libelle"/>
										<input type="hidden" name="param_id">
									<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Description</label>
										<!--end::Label-->

										<!--begin::Input-->
                                        <textarea rows="5" name="param_description" class="form-control form-control-solid" placeholder="Entrer une description"></textarea>
										<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Actions-->
									<div class="text-center pt-15">
										<button type="reset" class="btn btn-light me-3" data-kt-permissions-modal-action="cancel">
											Annuler
										</button>

										<button type="submit" class="btn btn-primary" data-kt-permissions-modal-action="submit">
											<span class="indicator-label">
												Soumettre
											</span>
											<span class="indicator-progress">
												Veuillez patienter...
												<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
											</span>
										</button>
									</div>
									<!--end::Actions-->
								</form>
								<!--end::Form-->
							</div>
							<!--end::Modal body-->
						</div>
						<!--end::Modal content-->
					</div>
					<!--end::Modal dialog-->
				</div>
				<!--end::Modal - Update permissions-->
				<!--begin::Modal - Update permissions-->
				<div
					class="modal fade" id="kt_modal_add_element" tabindex="-1" aria-hidden="true">
					<!--begin::Modal dialog-->
					<div
						class="modal-dialog modal-dialog-centered mw-650px">
						<!--begin::Modal content-->
						<div
							class="modal-content">
							<!--begin::Modal header-->
							<div
								class="modal-header">
								<!--begin::Modal title-->
								<h2 class="fw-bold">Ajout de sous-élément</h2>
								<!--end::Modal title-->

								<!--begin::Close-->
								<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-permissions-modal-action="close">
									<i class="ki-duotone ki-cross fs-1">
										<span class="path1"></span>
										<span class="path2"></span>
									</i>
								</div>
								<!--end::Close-->
							</div>
							<!--end::Modal header-->

							<!--begin::Modal body-->
							<div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
								<!--begin::Form-->
								<form
									id="kt_modal_add_element_form" class="form" action="{{path('add_children')}}" method="POST">
									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Titre (Comment allez-vous appeler les sous-éléments)</label>
										<!--end::Label-->

										<!--begin::Input-->
										<input
										class="form-control form-control-solid" pattern="[a-zA-Z0-9_\- ]*" placeholder="Entrer le titre" name="element_titre"/>
									<!--end::Input-->
									</div>
									<!--end::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Libellé</label>
										<!--end::Label-->

										<!--begin::Input-->
										<input
										class="form-control form-control-solid" placeholder="Entrer un libellé" name="element_libelle"/>
										<input type="hidden" name="element_parent">
									<!--end::Input-->
									</div>
									<!--end::Input group-->
									<!--end::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Description</label>
										<!--end::Label-->

										<!--begin::Input-->
										<textarea rows="4" class="form-control form-control-solid" placeholder="Entrer une description" name="element_description"></textarea>
									<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Actions-->
									<div class="text-center pt-15">
										<button type="reset" class="btn btn-light me-3" data-kt-permissions-modal-action="cancel">
											Annuler
										</button>

										<button type="submit" class="btn btn-primary" data-kt-permissions-modal-action="submit">
											<span class="indicator-label">
												Soumettre
											</span>
											<span class="indicator-progress">
												Veuillez patienter...
												<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
											</span>
										</button>
									</div>
									<!--end::Actions-->
								</form>
								<!--end::Form-->
							</div>
							<!--end::Modal body-->
						</div>
						<!--end::Modal content-->
					</div>
					<!--end::Modal dialog-->
				</div>
				<!--end::Modal - Update permissions-->
				<!--end::Modals-->
			</div>
			<!--end::Content container-->
		</div>
		<!--end::Content-->
	</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
<script src="{{asset('assets/js/custom/apps/parametres/listing.js')}}"></script>
{# <script src="{{asset('assets/js/custom/apps/user-management/trash.js')}}"></script> #}

<script type="text/javascript">
	const parametres = {{ parametres|map(a => {
		id: a.id,
		libelle: a.libelle,
		type: a.type,
		childType: (a.children|length != 0) ? a.children|first.type : null,
		description: a.description,
	})|json_encode|raw }};

	const editModal = document.getElementById('kt_modal_update_param');
	editModal.addEventListener('show.bs.modal', event => {
		const paramId = event.relatedTarget.attributes['data-bs-ident'].value;
		const param = parametres.find(c => c.id == paramId);
		if (!param) return;

		editModal.querySelector('input[name="param_id"]').value = param.id;
		editModal.querySelector('input[name="param_libelle"]').value = param.libelle;
		editModal.querySelector('textarea[name="param_description"]').innerText = param.description;
	});

	function addElement(paramId) {
		const param = parametres.find(c => c.id == paramId);
		if (!param) return;
		document.querySelector('input[name=element_parent]').value = param.id;
		document.querySelector('input[name=element_titre]').value = param.childType;
	}

    {% for type, messages in app.flashes %}
        {% for message in messages %}
        Swal.fire({
            html: `{{message|raw}}`,
            icon: "{{type}}",
            buttonsStyling: false,
            confirmButtonText: "Ok, compris !",
            customClass: {
                confirmButton: "btn btn-primary"
            }
        });
        {% endfor %}
    {% endfor %}
</script>
{% endblock %}
