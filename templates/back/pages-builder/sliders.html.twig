	<script type="text/javascript">
        const slides = {{ slides|map(a => {
            id: a.id,
            titre: a.titre,
            lien: a.lien,
            bouton: a.bouton,
            cover: a.image ? a.image.filename : null,
            online: a.online,
            description: a.description,
        })|json_encode|raw }};

        const editModal = document.getElementById('kt_modal_update_slide');

        editModal.addEventListener('show.bs.modal', event => {
            const paramId = event.relatedTarget.attributes['data-bs-ident'].value;
            const slide = slides.find(c => c.id == paramId);
            if (!slide) return;

            editModal.querySelector('input[name="slide_id"]').value = slide.id;
            editModal.querySelector('input[name="slide_titre"]').value = slide.titre;
            editModal.querySelector('input[name="slide_lien"]').value = slide.lien;
            editModal.querySelector('input[name="slide_bouton"]').value = slide.bouton;
            editModal.querySelector('textarea[name="slide_description"]').innerText = slide.description;
            
            // Image cover
            if (slide.cover) {
                const imageInput = editModal.querySelector('.image-input');
                const wrapper = editModal.querySelector('.image-input-wrapper');
                imageInput.classList.remove('image-input-empty');
                wrapper.style.backgroundImage = `url('${slide.cover}')`;
            }

            // Checkbox "Online"
            const checkboxOnline = editModal.querySelector('input[name="slide_online"]');
            checkboxOnline.checked = !!slide.online;
        });

		document.querySelectorAll(
			'[data-kt-slide-filter="delete_row"]'
		).forEach((t) => {
			t.addEventListener("click", function (t) {
				t.preventDefault();
				const e = t.target.closest("tr"),
				form = t.target.closest("form");
				Swal.fire({
					text: "Êtes-vous sûr de vouloir supprimer le carousel",
					icon: "warning",
					showCancelButton: !0,
					buttonsStyling: !1,
					confirmButtonText: "Oui, supprimer!",
					cancelButtonText: "Non, annuler",
					customClass: {
						confirmButton: "btn fw-bold btn-danger",
						cancelButton:
							"btn fw-bold btn-active-light-primary",
					},
				}).then(function (t) {
					t.value
						? form.submit()
						: "cancel" === t.dismiss
				});
			});
		});

		{% for type, messages in app.flashes %}
			{% for message in messages %}
				Swal.fire({
					html: `{{message|raw}}`,
					icon: "{{ type }}",
					buttonsStyling: false,
					confirmButtonText: "Ok, compris !",
					customClass: {
						confirmButton: "btn btn-primary"
					}
				});
			{% endfor %}
		{% endfor %}
	</script>
{% endblock %}
