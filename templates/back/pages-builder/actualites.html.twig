{% block javascripts %}
	<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
	<script src="{{asset('assets/js/custom/apps/pages-builder/actualites/table.js')}}"></script>
	<script src="{{asset('assets/js/custom/apps/pages-builder/actualites/add.js')}}"></script>
	<script src="{{asset('assets/js/custom/apps/pages-builder/actualites/update.js')}}"></script>
	<script src="{{asset('assets/plugins/custom/ckeditor/ckeditor-classic.bundle.js')}}"></script>
	<script type="text/javascript">
        const actualites = {{ actualites|map(a => {
            id: a.id,
            titre: a.titre,
            cover: a.cover ? a.cover.filename : null,
            online: a.online,
            description: a.description,
        })|json_encode|raw }};

        const editModal = document.getElementById('kt_modal_update_actualite');

        editModal.addEventListener('show.bs.modal', event => {
            const paramId = event.relatedTarget.attributes['data-bs-ident'].value;
            const actualite = actualites.find(c => c.id == paramId);
            if (!actualite) return;

            editModal.querySelector('input[name="actualite_id"]').value = actualite.id;
            editModal.querySelector('input[name="actualite_titre"]').value = actualite.titre;
			if (editDescriptionEditor) editDescriptionEditor.setData(actualite.description);
            // editModal.querySelector('textarea[name="actualite_description"]').innerText = actualite.description;
            
            // Image thumbnail
            if (actualite.thumbnail) {
                const thumbnailInput = editModal.querySelector('#thumbnail .image-input');
                const thumbnailWrapper = editModal.querySelector('#thumbnail .image-input-wrapper');
                thumbnailInput.classList.remove('image-input-empty');
                thumbnailWrapper.style.backgroundImage = `url('${actualite.thumbnail}')`;
            }
            // Image cover
            if (actualite.cover) {
                const coverInput = editModal.querySelector('#cover .image-input');
                const coverWrapper = editModal.querySelector('#cover .image-input-wrapper');
                coverInput.classList.remove('image-input-empty');
                coverWrapper.style.backgroundImage = `url('${actualite.cover}')`;
            }

            // Checkbox "Online"
            const checkboxOnline = editModal.querySelector('input[name="actualite_online"]');
            checkboxOnline.checked = !!actualite.online;
        });

		ClassicEditor
			.create(document.querySelector("#actualites_form_description"))
			.then(editor => {
				console.log(editor);
			})
			.catch(error => {
				console.error(error);
			});

		let editDescriptionEditor = null;
		ClassicEditor
			.create(document.querySelector("#actualite_description"))
			.then(editor => {
				editDescriptionEditor = editor;
			})
			.catch(console.error);

		{% for type, messages in app.flashes %}
			{% for message in messages %}
				Swal.fire({
					html: `{{message|raw}}`,
					icon: "{{ type }}",
					buttonsStyling: false,
					confirmButtonText: "Ok, compris !",
					customClass: {
						confirmButton: "btn btn-primary"
					}
				});
			{% endfor %}
		{% endfor %}
	</script>
{% endblock %}
