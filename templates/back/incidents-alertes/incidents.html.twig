{% block javascripts %}
	<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
    <script src="{{asset('assets/js/custom/apps/offres-emploi/candidates/table.js')}}"></script>
    {#<script src="{{asset('assets/js/custom/apps/offres-emploi/candidates/export.js')}}"></script>#}
	<script type="text/javascript">
		const incidents = {{ incidents|map(m => {
			id: m.id,
			code: m.code,
			etape: m.etape ?? null,
			dateDebut: m.dateDebut ? m.dateDebut|date('d/m/Y') : null,
			dateRemonte: m.dateRemonte ? m.dateRemonte|date('d/m/Y') : null,
			agence: m.agence ? m.agence.libelle : null,
			region: m.region ?? null,
			direction: m.direction ? m.direction.libelle : null,
			rapporteur: m.rapporteur ?? null,
			fonction: m.fonction ?? null,
			email: m.email ?? null,
			telephone: m.telephone ?? null,
			description: m.description ?? null,
			solutions: m.solutions ?? [],
			montantEstime: m.montantEstime ?? null,
			datePerte: m.datePerte ? m.datePerte|date('d/m/Y') : null,
			directionImpacte: m.directionImpacte ? m.directionImpacte.libelle : null,
			montantObtenu: m.montantObtenu ?? null,
			dateRecup: m.dateRecup ? m.dateRecup|date('d/m/Y') : null,
			dateCompta: m.dateCompta ? m.dateCompta|date('d/m/Y') : null,
			natureRecup: m.natureRecup ?? null,
			montantNet: m.montantNet ?? null,
			categorie: m.categorie ? m.categorie.libelle : null,
			sousCategorie: m.sousCategorie ? m.sousCategorie.libelle : null,
			processus: m.processus ? m.processus.libelle : null,
			sousProcessus: m.sousProcessus ? m.sousProcessus.libelle : null,
			createdAt: m.createdAt ?? null,
			consequences: m.consequences ?? null,
			pieceJointe: m.pieceJointe|map(f => ({
				filename: f.filename,
				alt: f.alt
			}))
		})|json_encode|raw }};

		const openModal = document.getElementById('kt_modal_open_fiche');

		openModal.addEventListener('show.bs.modal', e => {
			const id = e.relatedTarget.getAttribute('data-bs-ident');
			const alert = incidents.find(c => c.id == id);
			if (!alert) return;

			// Mapping clé → ID HTML
			const fields = {
				etape: '#etape',
				code: '#code',
				dateDebut: '#debut',
				dateRemonte: '#remontee',
				agence: '#agence',
				region: '#region',
				direction: '#direction',
				rapporteur: '#rapporteur',
				fonction: '#fonction',
				telephone: '#telephone',
				email: '#email',
				description: '#description',
				categorie: '#categorie',
				sousCategorie: '#sous_categorie',
				processus: '#processus',
				sousProcessus: '#sous_processus',
				montantEstime: '#montant_estime',
				datePerte: '#date_perte',
				directionImpacte: '#direction_impactee',
				montantObtenu: '#montant_recup',
				dateRecup: '#date_recup',
				dateCompta: '#date_compta_recup',
				natureRecup: '#nature_recup',
				montantNet: '#montant_perte',
				consequences: '#consequences'
			};

			// Remplissage dynamique
			for (const [key, selector] of Object.entries(fields)) {
				const el = openModal.querySelector(`${selector} label`)?.nextElementSibling;
				if (el) el.textContent = alert[key] ?? '';
			}

			const solutionsTable = openModal.querySelector('#solutions tbody');
			solutionsTable.innerHTML = '';
			(alert.solutions || []).forEach(solution => {
				solutionsTable.insertAdjacentHTML('beforeend', `
					<tr>
						<td>${solution['action']}</td>
						<td>${solution['responsable']}</td>
						<td>${solution['delai']}</td>
					</tr>
				`);
			});

			// Gestion des fichiers
			const fichiersContainer = openModal.querySelector('#fichiers .d-flex');
			fichiersContainer.innerHTML = '';
			(alert.pieceJointe || []).forEach(file => {
				fichiersContainer.insertAdjacentHTML('beforeend', `
					<a href="${file.filename}" target="_blank">
						<img src="${file.filename}" class="h-150px" style="min-width: 125px">
					</a>
				`);
			});
		});

		{% for type, messages in app.flashes %}
			{% for message in messages %}
				Swal.fire({
					html: `{{message|raw}}`,
					icon: "{{ type }}",
					buttonsStyling: false,
					confirmButtonText: "Ok, compris !",
					customClass: {
						confirmButton: "btn btn-primary"
					}
				});
			{% endfor %}
		{% endfor %}
	</script>
{% endblock %}
