							<thead>
								<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
									<th class="min-w-100px">Incident</th>
									<th class="min-w-200px">Rapporteur</th>
									<th class="text-end min-w-100px">Direction</th>
									<th class="text-end min-w-70px pe-0">Statut</th>
									<th class="text-end min-w-100px pe-0">Date</th>
									<th class="text-end min-w-70px">Actions</th>
								</tr>
							</thead>
							<tbody class="fw-semibold text-gray-600">
                                {% for incident in incidents %}
								<tr>
									<td class="">
										<a href="" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-bs-toggle="modal" data-bs-target="#kt_modal_open_fiche" data-bs-ident="{{incident.id}}">{{incident.code}}</a>
									</td>
									<td>
										<div
											class="d-flex align-items-center">
											<!--begin::Thumbnail-->
											<a href="#" class="symbol symbol-50px">
												<span class="symbol-label" style="background-image:url({{asset('assets/media/svg/avatars/blank.svg')}});"></span>
											</a>
											<!--end::Thumbnail-->
											<div
												class="ms-5">
												<!--begin::Title-->
												<a href="#" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-customer-filter="agent_name">{{incident.rapporteur}}</a>
												<!--end::Title-->
                                                <div class="text-muted fs-7 fw-bold">{{incident.email ~' | '~ incident.telephone}}</div>
											</div>
										</div>
									</td>
									<td class="text-end pe-0">
										<span class="fw-bold">{{incident.direction.libelle}}</span>
									</td>
									<td class="text-end pe-0">
										{% if incident.corrigee %}<div class="badge badge-light-success">Corrigée</div>
										{% else %}<div class="badge badge-light-warning">En attente</div>{% endif %}
									</td>
									<td class="text-end pe-0" data-order="rating-4">
                                        {{incident.createdAt|date('d/m/Y')}}
									</td>
									<td class="text-end">
										{% if not incident.corrigee %}
										<a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-success" data-bs-toggle="modal" data-bs-target="#kt_modal_correct_fiche" data-bs-correct-ident="{{incident.id}}">
											Corriger
											<i class="ki-duotone ki-double-check fs-5 ms-1">
												<span class="path1"></span>
												<span class="path2"></span>
											</i>
										</a>
										{% endif %}
									</td>
								</tr>
                                {% endfor %}
							</tbody>
						</table>
						<!--end::Table-->
					</div>
					<!--end::Card body-->
				</div>
				<!--end::Products-->

				<div class="modal fade" tabindex="-1" id="kt_modal_open_fiche">
					<div class="modal-dialog modal-dialog-centered modal-lg">
						<div class="modal-content">
							<div class="modal-header">
								<h3 class="modal-title">Ouverture de fiche</h3>

								<!--begin::Close-->
								<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
									<i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
								</div>
								<!--end::Close-->
							</div>

							<div class="modal-body row">
								<div id="code" class="mb-4 col-md-6">
									<label class="font-semibold">Code fiche</label>
									<h4>TEST</h4>
								</div>
								<div id="etape" class="mb-4 col-md-6">
									<label class="font-semibold">Étape de suivi de l'incident</label>
									<h4>TEST</h4>
								</div>
								<div id="debut" class="mb-4 col-md-6">
									<label class="font-semibold">Date de début de l'incident</label>
									<h4>Anonyme</h4>
								</div>
								<div id="remontee" class="mb-4 col-md-6">
									<label class="font-semibold">Date de remontée</label>
									<h4>Anonyme</h4>
								</div>
								<div id="agence" class="mb-4 col-md-6">
