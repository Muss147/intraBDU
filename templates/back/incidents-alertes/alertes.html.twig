{% endblock %}

{% block javascripts %}
	<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
    <script src="{{asset('assets/js/custom/apps/alerts-incidents/export.js')}}"></script>
	
	<script type="text/javascript">
		const alertes = {{ alertes|map(m => {
			id: m.id,
			code: m.code,
			categorie: m.categorie,
			nom: m.nom ?? null,
			prenoms: m.prenoms ?? null,
			email: m.email ?? null,
			telephone: m.telephone ?? null,
			adresse: m.adresse ?? null,
			accord: m.accord,
			salarie: m.salarie,
			description: m.description,
			fichiers: m.fichiers|map(f => {
				filename: f.filename,
				alt: f.alt,
			}),
		})|json_encode|raw }};

		const openModal = document.getElementById('kt_modal_open_alert');
		openModal.addEventListener('show.bs.modal', event => {
			const paramId = event.relatedTarget.attributes['data-bs-ident'].value;
			const alert = alertes.find(c => c.id == paramId);
			if (!alert) return;

			const el_nom = openModal.querySelector('#nom');
			const el_email = openModal.querySelector('#email');
			const el_telephone = openModal.querySelector('#telephone');
			const el_adresse = openModal.querySelector('#adresse');
			const el_accord = openModal.querySelector('#accord');

			openModal.querySelector('#code label').nextElementSibling.textContent = alert.code;
			openModal.querySelector('#categorie label').nextElementSibling.textContent = alert.categorie;
			alert.nom ? (el_nom.classList.remove('d-none'), el_nom.lastElementChild.textContent = `${alert.nom} ${alert.prenoms}`) : el_nom.classList.add('d-none');
			alert.email ? (el_email.classList.remove('d-none'), el_email.lastElementChild.textContent = alert.email) : el_email.classList.add('d-none');
			alert.telephone ? (el_telephone.classList.remove('d-none'), el_telephone.lastElementChild.textContent = alert.telephone) : el_telephone.classList.add('d-none');
			alert.adresse ? (el_adresse.classList.remove('d-none'), el_adresse.lastElementChild.textContent = alert.adresse) : el_adresse.classList.add('d-none');
			alert.accord ? (el_accord.classList.remove('d-none'), el_accord.lastElementChild.textContent = alert.accord) : el_accord.classList.add('d-none');
			openModal.querySelector('#salarie label').nextElementSibling.textContent = alert.salarie;
			openModal.querySelector('#consequences label').nextElementSibling.textContent = alert.description;
			
			const fichiersContainer = openModal.querySelector('#fichiers .d-flex');
			fichiersContainer.innerHTML = ''; // Réinitialiser avant d'ajouter

			alert.fichiers.forEach(file => {
				const link = `<a href="${file.filename}" target="_blank">
					<img src="${file.filename}" class="h-150px" style="min-width: 125px">
				</a>`;
				fichiersContainer.insertAdjacentHTML('beforeend', link);
			});

		});
		
		// Bouton d'export CSV dans le modal
		const exportBtn = openModal.querySelector('.btn.btn-primary');

		exportBtn.addEventListener('click', () => {
			const rows = [];
			
			// Exemple : récupérer toutes les sections visibles du modal
			const sections = openModal.querySelectorAll('.modal-body > div');
			sections.forEach(section => {
				const label = section.querySelector('label')?.textContent.trim() ?? '';
				const value = section.querySelector('h4, p')?.textContent.trim() ?? '';
				if (label && value) {
					rows.push([label, value]);
				}
			});

			// Convertir en CSV
			let csvContent = "data:text/csv;charset=utf-8," 
				+ rows.map(e => e.map(v => `"${v.replace(/"/g, '""')}"`).join(",")).join("\n");

			// Télécharger
			const link = document.createElement("a");
			link.setAttribute("href", encodeURI(csvContent));
			link.setAttribute("download", "alerte.csv");
			document.body.appendChild(link);
			link.click();
			document.body.removeChild(link);
		});

		{% for type, messages in app.flashes %}
			{% for message in messages %}
				Swal.fire({
					html: `{{message|raw}}`,
					icon: "{{ type }}",
					buttonsStyling: false,
					confirmButtonText: "Ok, compris !",
					customClass: {
						confirmButton: "btn btn-primary"
					}
				});
			{% endfor %}
		{% endfor %}
	</script>
{% endblock %}
