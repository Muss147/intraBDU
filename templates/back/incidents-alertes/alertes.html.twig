								</div>
								<!--end::Close-->
							</div>

							<div class="modal-body row">
								<div id="code" class="mb-4 col-12">
									<label class="font-semibold">Code</label>
									<h4>TEST</h4>
								</div>
								<div id="categorie" class="mb-4 col-12">
									<label class="font-semibold">Catégorie du signalement</label>
									<h4>TEST</h4>
								</div>
								<div id="nom" class="mb-4 col-md-6 d-none">
									<label class="font-semibold">Rapporteur</label>
									<h4>Anonyme</h4>
								</div>
								<div id="telephone" class="mb-4 col-md-6 d-none">
									<label class="font-semibold">Téléphone</label>
									<h4>Anonyme</h4>
								</div>
								<div id="email" class="mb-4 col-md-6 d-none">
									<label class="font-semibold">Email</label>
									<h4>Anonyme</h4>
								</div>
								<div id="adresse" class="mb-4 col-md-6 d-none">
									<label class="font-semibold">Adresse</label>
									<h4>Anonyme</h4>
								</div>
								<div id="accord" class="mb-4 col-md-6 d-none">
									<label class="font-semibold">Accepte de recevoir des messages</label>
									<h4>Oui</h4>
