                            <div
                                class="card pt-4 mb-6 mb-xl-9">
                                <!--begin::Card header-->
                                <div
                                    class="card-header border-0">
                                    <!--begin::Card title-->
                                    <div class="card-title">
                                        <h2>Information générale</h2>
                                    </div>
