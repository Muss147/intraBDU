{% extends "back/layout.html.twig" %}

{% block title offre.titre|default("Nouvelle offre") %}

{% block stylesheets %}
	<link href="{{asset('assets/plugins/custom/datatables/datatables.bundle.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	<div
		class="d-flex flex-column flex-column-fluid">

		<!--begin::Toolbar-->
		<div
			id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

			<!--begin::Toolbar container-->
			<div
				id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">

				<!--begin::Page title-->
				<div
					class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
					<!--begin::Title-->
					<h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
						{{offre.titre|default("Nouvelle offre")}}
					</h1>
					<!--end::Title-->


					<!--begin::Breadcrumb-->
					<ul
						class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							<a href="{{path('dashboard')}}" class="text-muted text-hover-primary">
								Tableau de bord
							</a>
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							App
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							Offres d'emploi
						</li>
						<!--end::Item-->

					</ul>
					<!--end::Breadcrumb-->
				</div>
				<!--end::Page title-->
				<!--begin::Actions-->
				<div class="d-flex align-items-center gap-2 gap-lg-3"></div>
				<!--end::Actions-->
			</div>
			<!--end::Toolbar container-->
		</div>
		<!--end::Toolbar-->

		<!--begin::Content-->
		<div
			id="kt_app_content" class="app-content  flex-column-fluid ">


			<!--begin::Content container-->
			<div
				id="kt_app_content_container" class="app-container  container-xxl ">
				<!--begin::Layout-->
				<div
					class="d-flex flex-column flex-xl-row">
					<!--begin::Sidebar-->
                    {% if offre.titre %}
					<div
						class="flex-column flex-lg-row-auto w-100 w-xl-350px mb-10">

						<!--begin::Card-->
						<div
							class="card mb-5 mb-xl-8">
							<!--begin::Card body-->
							<div
								class="card-body pt-15">
								<!--begin::Summary-->
								<div
									class="d-flex flex-center flex-column mb-5">
									<!--begin::Avatar-->
									<div class="symbol symbol-150px symbol-circle mb-7">
										<img src="{{asset('assets/media/logos/Logo-BDUCI-dark.png')}}" alt="image"/>
									</div>
									<!--end::Avatar-->

									<!--begin::Name-->
									<a href="#" class="fs-3 text-gray-800 text-center text-hover-primary fw-bold mb-1">
										{{offre.titre}}
									</a>
									<!--end::Name-->

									<!--begin::Email-->
									<a href="#" class="fs-5 fw-semibold text-muted text-hover-primary mb-6">
										{{offre.metier.libelle}}
									</a>
									<!--end::Email-->
								</div>
								<!--end::Summary-->

								<!--begin::Details toggle-->
								<div class="d-flex flex-stack fs-4 py-3">
									<div class="fw-bold">
										Details
									</div>
								</div>
								<!--end::Details toggle-->

								<div class="separator separator-dashed my-3"></div>

								<!--begin::Details content-->
								<div
									class="pb-5 fs-6">
									<!--begin::Details item-->
									<div class="fw-bold mt-5">Offre ID</div>
									<div class="text-gray-600">ID-{{offre.id}}</div>
									<!--begin::Details item-->
									<!--begin::Details item-->
									<div class="fw-bold mt-5">Direction</div>
									<div class="text-gray-600">
										<a href="#" class="text-gray-600 text-hover-primary">{{offre.direction.libelle}}</a>
									</div>
									<!--begin::Details item-->
									<!--begin::Details item-->
									<div class="fw-bold mt-5">Date d'expiration</div>
									<div class="text-gray-600">{{offre.dateExpiration|date('d-m-Y H:m:i')}}</div>
									<!--begin::Details item-->
									<!--begin::Details item-->
									<div class="fw-bold mt-5">Statut</div>
									<div class="text-gray-600">
                                        {% if offre.dateExpiration|date('U') >= "now"|date('U') %}
                                            <div class="badge badge-light-success fw-bold">Actif</div>
                                        {% else %}
                                            <div class="badge badge-light-danger fw-bold">Expiré</div>
                                        {% endif %}
                                    </div>
									<!--begin::Details item-->
									<!--begin::Details item-->
									<div class="fw-bold mt-5">Date ajout</div>
									<div class="text-gray-600">
										{{ offre.createdAt ? offre.createdAt|time_ago : '' }}
									</div>
									<!--begin::Details item-->
								</div>
								<!--end::Details content-->
							</div>
							<!--end::Card body-->
						</div>
						<!--end::Card-->
					</div>
                    {% endif %}
					<!--end::Sidebar-->

					<!--begin::Content-->
					<div
						class="flex-lg-row-fluid ms-lg-15">
                        <!--begin::Form-->
                        {{form_start(form_offre, {'attr': {'id': 'kt_ecommerce_customer_profile', 'class': 'form'}})}}
