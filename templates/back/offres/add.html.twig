                                                id="kt_ecommerce_customer_addresses_1" class="collapse fs-6 ps-9" data-bs-parent="#kt_ecommerce_customer_addresses_accordion">
                                                <!--begin::Details-->
                                                <div class="d-flex flex-column pb-5">
                                                    {% for mission in offre.missions %}
                                                    <div class="fw-bold text-gray-600">
                                                        {{mission}}
                                                    </div>
                                                    {% endfor %}
                                                </div>
                                                <!--end::Details-->
                                            </div>
                                            <!--end::Body-->
                                        </div>
                                        <!--end::Address-->
                                        <!--begin::Address-->
                                        <div
                                            class="py-0">
                                            <!--begin::Header-->
                                            <div
                                                class="py-3 d-flex flex-stack flex-wrap">
                                                <!--begin::Toggle-->
                                                <div
                                                    class="accordion-header d-flex align-items-center collapsible collapsed rotate" data-bs-toggle="collapse" href="#kt_ecommerce_customer_addresses_2" role="button" aria-expanded="false" aria-controls="kt_customer_view_payment_method_2">
