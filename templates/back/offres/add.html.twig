                                        <!--begin::Input-->
                                        {{form_widget(form_offre.titre, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer un titre'}})}}
                                        <!--end::Input-->
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div
