                                        </div>
                                        <!--begin::Col-->
                                        <div
                                            class="col-md-6 fv-row">
                                            <!--begin::Label-->
                                            <label class="fw-semibold fs-6 mb-2">Direction</label>
                                            <!--end::Label-->

                                            <!--begin::Input-->
                                            {{form_widget(form_offre.direction, {'attr': {'class': 'form-select form-select-solid', 'data-control': 'select2', 'data-hide-search': 'true', 'placeholder': 'Sélectionner une direction'}})}}
                                            <!--end::Input-->
                                        </div>
                                        <!--end::Input group-->
                                    </div>
                                    <!--end::Input group-->

                                    <!--begin::Input group-->
                                    <div
                                        class="row fv-row mb-7">
                                        <div class="col-md-6">
                                            <!--begin::Label-->
                                            <label class="required fw-semibold fs-6 mb-2">Niveau de formation</label>
                                            <!--end::Label-->

                                            <!--begin::Input-->
                                            {{form_widget(form_offre.niveauFormation, {'attr': {'class': 'form-select form-select-solid', 'data-control': 'select2', 'data-hide-search': 'true', 'placeholder': 'Sélectionner un niveau'}})}}
                                            <!--end::Input-->
                                        </div>
                                        <div class="col-md-6">
                                            <!--begin::Label-->
                                            <label class="required fw-semibold fs-6 mb-2">Expérience démandée</label>
                                            <!--end::Label-->

                                            <!--begin::Input-->
                                            {{form_widget(form_offre.experience, {'attr': {'class': 'form-select form-select-solid', 'data-control': 'select2', 'data-hide-search': 'true', 'placeholder': 'Sélectionner une expérience'}})}}
                                            <!--end::Input-->
                                        </div>
                                    </div>
                                    <!--end::Input group-->

                                    <div
                                        class="row g-9 mb-7">
                                        <div class="col-md-6">
                                            <!--begin::Label-->
                                            <label class="required fw-semibold fs-6 mb-2">Niveau de poste</label>
                                            <!--end::Label-->

                                            <!--begin::Input-->
                                            {{form_widget(form_offre.niveauPoste, {'attr': {'class': 'form-select form-select-solid', 'data-control': 'select2', 'data-hide-search': 'true', 'placeholder': 'Sélectionner un niveau'}})}}
                                            <!--end::Input-->
                                        </div>
                                        <!--begin::Col-->
                                        <div
                                            class="col-md-6 fv-row">
                                            <!--begin::Label-->
                                            <label class="fw-semibold fs-6 mb-2">Nombre de poste</label>
                                            <!--end::Label-->

                                            <!--begin::Input-->
                                            {{form_widget(form_offre.postes, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Saissir un nombre'}})}}
                                            <!--end::Input-->
                                        </div>
                                        <!--end::Input group-->
                                    </div>
                                    <div
                                        class="row g-9 mb-7">
                                        <!--begin::Col-->
                                        <div
                                            class="col-md-6 fv-row">
                                            <!--begin::Label-->
                                            <label class="required fw-semibold fs-6 mb-2">Date d'expiration</label>
                                            <!--end::Label-->

                                            <!--begin::Input-->
                                            {{form_widget(form_offre.dateExpiration, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer une date'}})}}
                                            <!--end::Input-->
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                </div>
                                <!--end::Card body-->
                            </div>
                            <!--end::Card-->

                            <!--begin::Card-->
                            <div
                                class="card pt-4 mb-6 mb-xl-9">
                                <!--begin::Card header-->
                                <div
                                    class="card-header border-0">
