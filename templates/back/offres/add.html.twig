                                                    <div class="accordion-icon me-3">
                                                        <i class="ki-duotone ki-right fs-4"></i>
                                                    </div>
                                                    <!--end::Arrow-->

                                                    <!--begin::Summary-->
                                                    <div class="me-3">
                                                        <div class="d-flex align-items-center">
                                                            <div class="fs-4 fw-bold">
                                                                Profils recherchés
                                                            </div>
                                                        </div>
