{% extends "back/layout.html.twig" %}

{% block title 'Étoile du mois' %}

{% block stylesheets %}
<link href="{{asset('assets/plugins/custom/datatables/datatables.bundle.css')}}" rel="stylesheet" type="text/css"/>
<style type="text/css">
.badge {
	white-space: collapse;
}
</style>
{% endblock %}

{% block body %}
	<div
		class="d-flex flex-column flex-column-fluid">

		<!--begin::Toolbar-->
		<div
			id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

			<!--begin::Toolbar container-->
			<div
				id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">

				<!--begin::Page title-->
				<div
					class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
					<!--begin::Title-->
					<h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
						Étoile du mois
					</h1>
					<!--end::Title-->


					<!--begin::Breadcrumb-->
					<ul
						class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							<a href="{{path('dashboard')}}" class="text-muted text-hover-primary">
								Tableau de bord
							</a>
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							Pages builder
						</li>
						<!--end::Item-->
						<!--begin::Item-->
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-500 w-5px h-2px"></span>
						</li>
						<!--end::Item-->

						<!--begin::Item-->
						<li class="breadcrumb-item text-muted">
							Étoile du mois
						</li>
						<!--end::Item-->

					</ul>
					<!--end::Breadcrumb-->
				</div>
				<!--end::Page title-->
				<!--begin::Actions-->
				<div
					class="d-flex align-items-center gap-2 gap-lg-3">
				</div>
				<!--end::Actions-->
			</div>
			<!--end::Toolbar container-->
		</div>
		<!--end::Toolbar-->

		<!--begin::Content-->
		<div
			id="kt_app_content" class="app-content  flex-column-fluid ">


			<!--begin::Content container-->
			<div
				id="kt_app_content_container" class="app-container  container-xxl ">

				<!--begin::Card-->
				<div
					class="card card-flush ">
					<!--begin::Card header-->
					<div
						class="card-header mt-6">
						<!--begin::Card title-->
						<div
							class="card-title">
							<!--begin::Search-->
							<div class="d-flex align-items-center position-relative my-1 me-5">
								<i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
									<span class="path1"></span>
									<span class="path2"></span>
								</i>
								<input type="text" data-kt-params-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Rechercher un projet"/>
							</div>
							<!--end::Search-->
						</div>
						<!--end::Card title-->

						<!--begin::Card toolbar-->
						<div
							class="card-toolbar gap-4">
							<!--begin::Button-->
							<button type="submit" class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_project">
								<i class="ki-duotone ki-plus-square fs-3">
									<span class="path1"></span>
									<span class="path2"></span>
									<span class="path3"></span>
								</i>
								Ajouter un projet
							</button>
							<!--end::Button-->
							<!--begin::Button-->
							<a href="{{ path('admin_project_publish', {month: "now"|date("Y-m")}) }}" class="btn btn-light-success">
								Publier les projets
							</a>
							<!--end::Button-->
							<!--begin::Button-->
							<a href="{{ path('admin_project_close', {month: "now"|date("Y-m")}) }}" class="btn btn-light-danger">
								Clôturer le vote
							</a>
							<!--end::Button-->
						</div>
						<!--end::Card toolbar-->
					</div>
					<!--end::Card header-->

					<!--begin::Card body-->
					<div
						class="card-body pt-0">
						<!--begin::Table-->
						<table class="table align-middle table-row-dashed fs-6 gy-5 mb-0" id="kt_params_table">
							<thead>
								<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
									<th class="min-w-300px">Titre</th>
									<th>Porteur</th>
									<th class="min-w-100px">Mois</th>
									<th class="min-w-125px">Publié</th>
									<th class="text-end min-w-250px">Actions</th>
								</tr>
							</thead>
							<tbody class="fw-semibold text-gray-600">
                                {% for project in projects %}
								<tr>
									<td>
										<div data-kt-params-table-filter="product_name">
											<a href="#" class="text-gray-800 text-hover-primary fs-5">{{ project.title }}</a>
										</div>
									</td>
									<td>
                                        <div class="d-flex align-items-center">
											<!--begin::Thumbnail-->
											<a href="#" class="symbol symbol-25px">
												<span class="symbol-label" style="background-image:url(/assets/media/svg/avatars/blank.svg);"></span>
											</a>
											<!--end::Thumbnail-->
											<div class="ms-5">
												<!--begin::Title-->
												<a href="#" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-customer-filter="agent_name">{{project.owner.prenoms ~" "~ project.owner.nom}}</a>
												<!--end::Title-->
											</div>
										</div>
                                    </td>
									<td>{{ project.month }}</td>
									<td>
                                        {% if project.isPublished %}
                                            ✅
                                        {% else %}
                                            ❌
                                        {% endif %}
                                    </td>
									<td class="text-end">
										<a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
											Actions
											<i class="ki-duotone ki-down fs-5 ms-1"></i>
										</a>
										<!--begin::Menu-->
										<div
											class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
											{% if not project.isPublished %}
                                            <!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="#" class="menu-link px-3" data-bs-toggle="modal" data-bs-target="#kt_modal_project" data-id="{{project.id}}">
													Modifier
												</a>
											</div>
											<!--end::Menu item-->
                                            {% endif %}
											<!--begin::Menu item-->
											<form class="menu-item px-3" method="post" action="">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
												<a href="#" class="menu-link px-3" data-kt-params-table-filter="delete_row">
													Supprimer
												</a>
											</form>
											<!--end::Menu item-->
										</div>
										<!--end::Menu-->
									</td>
								</tr>
                                {% endfor %}
							</tbody>
						</table>
						<!--end::Table-->
					</div>
					<!--end::Card body-->
				</div>
				<!--end::Card-->

				<!--begin::Modals-->
				<!--begin::Modal - Add permissions-->
				<div class="modal fade" id="kt_modal_project" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered mw-750px">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="fw-bold" id="kt_modal_project_title">Ajout de projet</h2>
                            <button class="btn btn-icon btn-sm" data-bs-dismiss="modal">
                            <i class="ki-duotone ki-cross fs-1"></i>
                            </button>
                        </div>

                        <div class="modal-body">
                            <!--begin::Form-->
                            {{ form_start(form, {attr: {id: 'kt_modal_add_param_form', class: 'form', novalidate: 'novalidate'}}) }}
                                <!--begin::Input group-->
                                <div
                                    class="fv-row mb-7">
                                    <!--begin::Label-->
                                    <label class="fs-6 fw-semibold form-label mb-2 required">Titre</label>
                                    <!--end::Label-->

                                    <!--begin::Input-->
                                    {{form_widget(form.title, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer un titre'}})}}
                                    <!--end::Input-->
                                </div>
                                <!--begin::Input group-->
                                <!--begin::Input group-->
                                <div class="d-flex flex-column mb-7 fv-row">
                                    <!--begin::Label-->
                                    <label class="fs-6 fw-semibold mb-2">
                                        <span class="required">Porteur du projet</span>
                                    </label>
                                    <!--end::Label-->

                                    <!--begin::Input-->
                                    {{ form_widget(form.owner, {
                                        attr: {
                                            class: 'form-select form-select-solid fw-bold',
                                            'data-control': 'select2',
                                            'data-dropdown-parent': '#kt_modal_project',
                                            'data-placeholder': 'Sélectionner un agent'
                                        }
                                    }) }}
                                    <!--end::Input-->
                                </div>
                                <!--end::Input group-->
                                <div
                                    class="fv-row mb-7">
                                    <!--begin::Label-->
                                    <label class="fs-6 fw-semibold form-label mb-2 required">Description</label>
                                    <!--end::Label-->

                                    <!--begin::Input-->
                                    {{ form_widget(form.description, {attr: {class: 'form-control form-control-solid', rows: 8, 'placeholder': 'Entrer une description'}}) }}
                                    <!--end::Input-->
                                    {{ form_errors(form.description) }}
                                </div>
                                <!--end::Input group-->

                                <!--begin::Actions-->
                                <div class="text-center pt-15">
                                    <button type="reset" class="btn btn-light me-3" data-kt-permissions-modal-action="cancel">
                                        Annuler
                                    </button>

                                    <button type="submit" class="btn btn-primary" data-kt-permissions-modal-action="submit">
                                        <span class="indicator-label">
                                            Soumettre
                                        </span>
                                        <span class="indicator-progress">
                                            Veuillez patienter...
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                    </button>
                                </div>
                                <!--end::Actions-->

                                {# CSRF token explicitement affiché #}
                                {{ form_row(form._token) }}

                            {{form_end(form, { render_rest: false })}}
                            <!--end::Form-->
							<!--end::Modal body-->
						</div>
						<!--end::Modal content-->
					</div>
					<!--end::Modal dialog-->
				</div>
				<!--end::Modal - Add permissions-->
				<!--end::Modals-->
			</div>
			<!--end::Content container-->
		</div>
		<!--end::Content-->
	</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
<script src="{{asset('assets/js/custom/apps/parametres/listing.js')}}"></script>
<script src="{{asset('assets/plugins/custom/ckeditor/ckeditor-classic.bundle.js')}}"></script>

<script type="text/javascript">
	const initSelect2 = () => {
        $('[data-control="select2"]').select2({
            dropdownParent: $('#kt_modal_project'),
            placeholder: 'Sélectionner un agent',
            templateResult: optionFormat,
            templateSelection: optionFormat,
            minimumResultsForSearch: 0
        });
    };

	let projectEditor;

    const initCKEditor = () => {
        const textarea = document.querySelector('#project_impact_description');

        if (textarea && !projectEditor) {
            ClassicEditor.create(textarea)
                .then(editor => {
                    projectEditor = editor;
                })
                .catch(console.error);
        }
    };

    var optionFormat = function(item) {
        if (!item.id) {
            return item.text;
        }

        var imgUrl = item.element.getAttribute('data-kt-select2-user');
        var span = document.createElement('span');

        span.innerHTML =
            '<div class="d-flex align-items-center">' +
                '<img src="' + imgUrl + '" class="rounded-circle h-25px w-25px me-3" />' +
                '<span class="fw-semibold">' + item.text + '</span>' +
            '</div>';

        return $(span);
    };

    const projects = {{ projects|map(p => {
		id: p.id,
		title: p.title,
		owner: p.owner ? p.owner.id : null,
		description: p.description,
	})|json_encode|raw }};

    const modal = document.getElementById('kt_modal_project');

    modal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        const projectId = button?.dataset?.id;

        const title = modal.querySelector('#kt_modal_project_title');
        const form = modal.querySelector('form');

        initSelect2();
        initCKEditor();

        if (projectId) {
            const project = projects.find(p => p.id == projectId);
            title.textContent = 'Modification de projet';

            form.action = `/espace-admin/projects/${project.id}/edit`;

            form.querySelector('[name="project_impact[title]"]').value = project.title;
            form.querySelector('[name="project_impact[owner]"]').value = project.owner;
            $(form.querySelector('[name="project_impact[owner]"]')).trigger('change');

            projectEditor?.setData(project.description);
        } else {
            title.textContent = 'Ajout de projet';
            form.reset();
            projectEditor?.setData('');
        }
    });

    {% for type, messages in app.flashes %}
        {% for message in messages %}
        Swal.fire({
            html: `{{message|raw}}`,
            icon: "{{type}}",
            buttonsStyling: false,
            confirmButtonText: "Ok, compris !",
            customClass: {
                confirmButton: "btn btn-primary"
            }
        });
        {% endfor %}
    {% endfor %}
</script>
{% endblock %}
